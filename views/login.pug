extends layout.pug

block content
  h2.center-header Log In
  .form-block
  .center-header
    form.move(action='/login' method='POST')
      label.form1(for='email') Email:
        input.form-button(type='text' id='email' placeholder='email' name='email')
      label.form1(for='password') Password:
        input.form-button(type='password' id='password' placeholder='password' name='password')
      button.form1.button1(type='submit') Log in        

